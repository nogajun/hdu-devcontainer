  "version": "0.1.1",
  "configurations": [
    {
      "name": "Python: Current file",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [],
      "cwd": "${fileDirname}"
    },
    {
      "name": "Streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${fileDirname}",
      "args": [
        "run",
        "${file}"
      ],
      "console": "integratedTerminal"
    }
  ]
}
